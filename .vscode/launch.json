    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'riscv_trace_debugger'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=riscv_trace_debugger",
                    "--package=riscv_trace_debugger"
                ],
                "filter": {
                    "name": "riscv_trace_debugger",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'riscv_trace_debugger'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=riscv_trace_debugger",
                    "--package=riscv_trace_debugger"
                ],
                "filter": {
                    "name": "riscv_trace_debugger",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Remote attach",
            "targetCreateCommands": ["target create ${workspaceFolder}/src/test_bin/hello_test.elf"],
            "processCreateCommands": ["gdb-remote 127.0.0.1:9001"],
            "reverseDebugging": true,
        },
    ]
}
